{
    "version": 2,
    "framework": null,
    "functions": {
        "api/*.php": { "runtime": "vercel-php@0.7.2" }
    },
    "routes": [
        {
            "src": "/(css|js|img|build|assets)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://my-portofolio-git-main-adrian-dzariats-projects.vercel.app",
        "APP_KEY": "${APP_KEY}"
    }
}